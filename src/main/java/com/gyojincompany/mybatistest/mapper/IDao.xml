<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.gyojincompany.mybatistest.dao.IDao">
	
	<select id="boardlistDao" resultType="com.gyojincompany.mybatistest.dto.BoardDto">
		SELECT * FROM boardtbl ORDER BY bnum DESC
	</select>
	
	<insert id="boardWriteDao">
		INSERT INTO boardtbl(btitle, bcontent, bname, bhit) VALUES (#{param1}, #{param2}, #{param3}, 0)
	</insert>
	
	<delete id="boardDeleteDao">
		DELETE FROM boardtbl WHERE bnum = #{param1}
	</delete>
	
	<select id="boardCountDao" resultType="int">
		SELECT COUNT(*) FROM boardtbl
	</select>
	
	<select id="boardContentViewDao" resultType="com.gyojincompany.mybatistest.dto.BoardDto">
		SELECT * FROM boardtbl WHERE bnum = #{param1}
	</select>

</mapper>    